# Alpaca Improved - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit the actual .env file to version control

# ============================================================================
# Application Settings
# ============================================================================
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-here-use-strong-random-string
TIMEZONE=America/New_York
LOG_LEVEL=INFO

# ============================================================================
# Alpaca Trading API Configuration
# ============================================================================
# Get your API keys from: https://app.alpaca.markets/paper/dashboard/overview
ALPACA_API_KEY=your_alpaca_api_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_key_here

# Trading environment: 'paper' for testing, 'live' for real trading
# WARNING: Use 'paper' for development and testing!
ALPACA_TRADING_ENV=paper

# ============================================================================
# Database Configuration
# ============================================================================
DATABASE_URL=postgresql://alpaca_user:alpaca_pass@localhost:5432/alpaca_improved
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# Trading Bot Configuration (Optional)
# ============================================================================
DISCORD_BOT_TOKEN=your_discord_bot_token_here
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ============================================================================
# Risk Management
# ============================================================================
MAX_POSITION_SIZE_PERCENT=5.0
MAX_DAILY_LOSS_PERCENT=2.0
FORCE_PAPER_TRADING=true

# ============================================================================
# Data Configuration
# ============================================================================
DATA_DIR=./data
ENABLE_DATA_CACHE=true
CACHE_EXPIRY_SECONDS=86400 